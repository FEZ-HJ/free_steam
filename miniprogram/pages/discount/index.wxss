.tag,
.button {
  margin-right: 5px;
}

.link-top {
  width: 685rpx;
  border-top: solid #E8E8E8 1px;
}

.title{
  margin-top: 20rpx;
  font-size: 11pt;
  line-height: 32rpx;
}

.swiper-container{
  position: relative;
}
.swiper-container .swiper{
  height: 112rpx;
}
.swiper-container .swiper .img{
  position: absolute ;
  width: 100%;
  height: 100%;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: #f80;
}

.image{
  border-radius: 1%;
   height: 112rpx;
   width: 100%;
}