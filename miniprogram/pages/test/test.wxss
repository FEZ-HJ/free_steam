.global{
  background-color: #F1F1F1;
  width: 100%;
  min-height: 1334rpx;
  overflow:hidden;
}

.prize{
  background-color: #fff;
  border-radius: 20rpx;
  width: 700rpx;
  height: 447rpx;
  margin-left: 25rpx;
  margin-top: 50rpx;
}

.lottery{
  background-color: #fff;
  border-radius: 20rpx;
  width: 700rpx;
  height: 300rpx;
  margin-left: 25rpx;
  margin-top: 50rpx;
  overflow:hidden;
}

.record{
  background-color: #fff;
  border-radius: 20rpx;
  width: 700rpx;
  height: 225rpx;
  margin-left: 25rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  overflow:hidden;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

.title {
  color: #2f2f2f;
  margin-top: 20rpx;
  font-size: 38rpx;
  font-weight: 600;
}

.author {
  font-size: 28rpx;
  color: #999;
}

.avatar{
  width:700rpx;
  height:327rpx;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

.lottery-button{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: black;
  margin-top: 75rpx;
  margin-left: 275rpx;
  text-align: center;
  line-height: 150rpx;
  color: white;
}

.help{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;  
  width: 40%;
  height: 120rpx;
  float:left;
}

.share{
  width: 30%;
  height: 120rpx;
  margin-left: auto;
  margin-top: 25rpx;
}

.invite{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-left: 8.3rpx;
  margin-right: 8.3rpx;
  background-color: #F5F5F5;
  border-radius: 50%;
  color: #A9A9A9;
  text-align: center;
  line-height: 100rpx;
}

.all{
  margin-top: 25rpx;
}

.all-head {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;  
  width: 40%;
}

.headImg{
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-left: 8.3rpx;
  margin-right: 8.3rpx;
  border-radius: 50%;
}